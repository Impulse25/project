<?php
// config/db.php.example - Пример конфигурации подключения к БД
// Скопируйте этот файл в db.php и измените данные

$host = 'localhost';        // Хост БД
$dbname = 'svgtk_requests'; // Название базы данных
$username = 'root';         // Пользователь БД
$password = '';             // Пароль БД (ИЗМЕНИТЕ!)

try {
    $pdo = new PDO(
        "mysql:host=$host;dbname=$dbname;charset=utf8mb4", 
        $username, 
        $password
    );
    
    // Режим ошибок
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    
    // Режим выборки по умолчанию
    $pdo->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::FETCH_ASSOC);
    
    // Эмуляция prepared statements (для совместимости)
    $pdo->setAttribute(PDO::ATTR_EMULATE_PREPARES, false);
    
} catch (PDOException $e) {
    // В production логируйте ошибки, не показывайте пользователю
    error_log("Database connection error: " . $e->getMessage());
    die("Ошибка подключения к базе данных. Обратитесь к администратору.");
}
?>
